    <div class="container">

      <div class="weather_form">
        <center><h1 style="margin-bottom:1.5cm;font-size: 50px;"><b>Type in your city below:</b></h1></center>
        <fieldset>
          <center>
            <form action="/WeatherApp" method="post">
              <input name="city" type="text" class="ghost-input" placeholder="Enter a City" required>
              <input type="submit" class="ghost-button" value="Get Weather">
            </form>
          <center>
          <% if(weather !== null){ %>
            <p style="margin-top:0.5cm;"><%= weather %></p>
          <% } else{ %>  
            <p p style="margin-top:0.5cm;"><%= error %></p>
          <% } %>
        </fieldset>
      </div >
    </div><!-- /.container -->

